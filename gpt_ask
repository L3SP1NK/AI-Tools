#!/bin/bash

if ! which gpt_prompt>/dev/null; then
    echo "gpt prompt not found!"
    exit 1
fi

dmenucmd='rofi -dmenu'
question=$(${dmenucmd} -p "ðŸ¤– Ask ChatGPT:")

if [ -z "${question}" ]; then
	exit 1
fi

response=$(echo "${question}"|gpt_prompt)

if [ -z "${response}" ]; then
	exit 1
fi

notify-send "${response}"
